<div class="w-full">
  <p style="color: green"><%= notice %></p>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Comments</h1>
    <%= link_to "New comment", new_comment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="comments" class="min-w-full">
    <%= render @comments%>
  </div>
  <div class='bg-blue-400 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-20'>
    <%== pagy_next_link(@pagy, text: 'More', link_extra: 'id="next_link"') %>
  </div>
</div>
